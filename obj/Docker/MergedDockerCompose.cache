services:
  facesapi:
    build:
      context: C:\Users\olowoyinka\source\repos\FacesAndFaces
      dockerfile: Faces/FacesApi/Dockerfile
    container_name: FacesApi
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: facesapi:dev
    ports:
    - published: 5300
      target: 80
  faceswebmvc:
    build:
      context: C:\Users\olowoyinka\source\repos\FacesAndFaces
      dockerfile: Faces.Web/Faces.WebMvc/Dockerfile
    container_name: FacesWebMvc
    depends_on:
      ordersapi:
        condition: service_started
      rabbitmq:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      OrdersApiUrl: http://ordersapi
      SignalRHubUrl: http://localhost:5200
    image: faceswebmvc:dev
    ports:
    - published: 5100
      target: 80
  notificationservice:
    build:
      context: C:\Users\olowoyinka\source\repos\FacesAndFaces
      dockerfile: CustomerNotification/NotificationService/Dockerfile
    container_name: NotificationService
    depends_on:
      rabbitmq:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: notificationservice:dev
  ordersapi:
    build:
      context: C:\Users\olowoyinka\source\repos\FacesAndFaces
      dockerfile: Ordering/OrdersApi/Dockerfile
    container_name: OrdersApi
    depends_on:
      facesapi:
        condition: service_started
      rabbitmq:
        condition: service_started
      sqldbService:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      FacesApiUrl: http://facesapi
      OrdersContextConnection: server=sqldbService;Database=OrdersApiDb;User Id=sa;Password=BigPassw0rd
    image: ordersapi:dev
    ports:
    - published: 5200
      target: 80
  rabbitmq:
    container_name: rabbitmqFace
    image: rabbitmq:3-management
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
  sqldbService:
    container_name: sqlserver
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: BigPassw0rd
    image: mcr.microsoft.com/mssql/server:2017-latest
    ports:
    - published: 1403
      target: 1433
version: '3.4'