@model Faces.WebMvc.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Details";
}

<h3 id="PageTitle">Order Details</h3>

Order Id: @Model.OrderId
User Email: @Model.UserEmail
Picture: <img src="@Model.ImageString" width="50" heght="50" />
Order Status: @Model.Status

<table class="table">
    <thead>
        <tr>
            <th> OrderDetailId</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.OrderDetailId</td>
                <td><img src="@detail.ImageString" width="30" height="30" /></td>
            </tr>
        }
    </tbody>
</table>